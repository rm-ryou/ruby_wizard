#! /usr/bin/env ruby

$:.unshift File.join(__dir__, '../lib')
require "wizard"

begin
  case ARGV[0]
  when /^digraph$/i
    Wizard::Map::DiGraph.new.graph_png
  when /^graph$/i
    Wizard::Map::UndirectedGraph.new.graph_png
  when nil
    Wizard::Controller.new.repl
  else
    raise RuntimeError
  end
rescue RuntimeError
  puts "invalid arguments."
end
